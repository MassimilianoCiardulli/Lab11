<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/9.0.1" fx:controller="it.polito.tdp.bar.BarController">
   <top>
      <Label prefHeight="62.0" prefWidth="110.0" text="Simulazione Bar" textFill="RED" BorderPane.alignment="CENTER">
         <font>
            <Font name="Verdana Bold Italic" size="12.0" />
         </font>
      </Label>
   </top>
   <left>
      <Button fx:id="btnSimula" mnemonicParsing="false" onAction="#handleSimula" text="Simula" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" />
         </BorderPane.margin>
      </Button>
   </left>
   <right>
      <TextArea fx:id="txtArea" prefHeight="177.0" prefWidth="182.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </BorderPane.margin>
      </TextArea>
   </right>
</BorderPane>
